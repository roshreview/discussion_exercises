<h2> Input </h2>
<%= form_tag do %>
  <p>
    <%= label_tag :for_spell, 'Spell Check' %>
    <%= text_area_tag 'for_spell', @for_spell, placeholder: 'Put words here to check spelling' %>
  </p>

    <%= @spell_results %>
  <p>
    <%= label_tag :for_format, 'Format'%>
    <%= text_area_tag 'for_format', @for_format, placeholder: 'Put words here to format' %>
    </p>

    <%= submit_tag %>
<% end %>

<h2>Results</h2>
<h3>Spell Check</h3>
<%=@spell_results%>
<h3>Formatting</h3>
